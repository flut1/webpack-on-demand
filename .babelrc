{
  "presets": [
    ["@babel/env", {
      "targets": {
        "browsers": ["last 2 versions"],
        "node": "8"
      },
      "loose": true,
      "useBuiltIns": false
    }],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread",
    ["@babel/plugin-transform-runtime", {
      "helpers": true,
      "regenerator": false
    }]
  ],
  "env": {
    "test": {
      "plugins": [
        "./test/_setup/arrow-function-coverage-fix.js",
        "istanbul"
      ]
    }
  },
  "ignore": [
    "src/lib/vendor/**/*.*",
    "./test/_setup/arrow-function-coverage-fix.js"
  ]
}
